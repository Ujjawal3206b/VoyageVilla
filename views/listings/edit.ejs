<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3>Edit</h3>
                <form action="/listings/<%= list._id %>?_method=PUT" method="post" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Title</label>
                        <div class="input-group has-validation">
                            <input type="text" name="listing[title]" placeholder="enter title" class="form-label"
                                value="<%= list.title %>" id="exampleFormControlInput1" required>
                            <div class="invalid-feedback">Please choose Title.</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlTextarea1" class="form-label">Description</label>
                        <div class="input-group has-validation">
                            <textarea name="listing[description]" class="form-label" id="exampleFormControlTextarea1"
                                placeholder="enter description" rows="5" cols="25" required><%= list.description %></textarea>
                            <div class="invalid-feedback">Please Give Description.</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Image URL</label>
                        <input type="text" name="listing[image]" class="form-control" id="exampleFormControlInput1">
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="exampleFormControlInput1" class="form-label">Price</label>
                            <div class="input-group has-validation">
                                <input type="number" name="listing[price]" class="form-label" id="price"
                                    placeholder="enter price" value="<%= list.price %>" id="exampleFormControlInput1"
                                    required>
                                <div class="invalid-feedback">Please Give Price.</div>
                            </div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="exampleFormControlInput1" class="form-label">Country</label>
                            <div class="input-group has-validation">
                                <input type="text" name="listing[country]" class="form-label"
                                    placeholder="enter country" value="<%= list.country %>"
                                    id="exampleFormControlInput1" required>
                                <div class="invalid-feedback">Country not Filled.</div>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Location</label>
                        <div class="input-group has-validation">
                            <input type="text" name="listing[location]" class="form-label" placeholder="enter location"
                                value="<%= list.location %>" id="exampleFormControlInput1" required>
                            <div class="invalid-feedback">Location doesn't filled.</div>
                        </div>
                    </div>
                    <button class="btn btn-outline-primary offset-4" type="submit">Edit</button>
                </form>
            </div>
        </div>
    </body>